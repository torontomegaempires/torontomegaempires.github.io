<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Mega Empires Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-trophy"></i> Mega Empires Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-controller"></i> Games
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/games">View All Games</a></li>
                            <li><a class="dropdown-item" href="/games/new">Add New Game</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-people"></i> Players
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/players">View All Players</a></li>
                            <li><a class="dropdown-item" href="/players/new">Add New Player</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-flag"></i> Nations
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/nations">View All Nations</a></li>
                            <li><a class="dropdown-item active" href="/nations/new">Add New Nation</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-table"></i> Records
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/records">View All Records</a></li>
                            <li><a class="dropdown-item" href="/records/new">Add New Record</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col">
                <h1 class="h2"><%= title %></h1>
            </div>
        </div>

        <!-- Breadcrumb -->
        <div class="row mb-3">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/nations">Nations</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Form -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-flag"></i> Nation Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Display validation errors -->
                        <% if (errors && errors.length > 0) { %>
                            <div class="alert alert-danger">
                                <h6><i class="bi bi-exclamation-triangle"></i> Please fix the following errors:</h6>
                                <ul class="mb-0">
                                    <% errors.forEach(function(error) { %>
                                        <li><%= error.msg %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% } %>

                        <form method="POST" action="<%= nation.id ? '/nations/' + nation.id : '/nations' %>" novalidate>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">
                                            Nation Name <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" 
                                               class="form-control <%= errors && errors.find(e => e.param === 'name') ? 'is-invalid' : '' %>" 
                                               id="name" 
                                               name="name" 
                                               value="<%= nation.name || '' %>" 
                                               required>
                                        <div class="form-text">
                                            Enter the nation name (e.g., "Babylon", "Egypt", "Assyria")
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> 
                                    <%= nation.id ? 'Update Nation' : 'Create Nation' %>
                                </button>
                                <a href="/nations" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <% if (nation.id) { %>
                                    <button type="button" class="btn btn-outline-danger ms-auto" 
                                            onclick="confirmDelete(<%= nation.id %>, 'Nation')">
                                        <i class="bi bi-trash"></i> Delete Nation
                                    </button>
                                <% } %>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Help Panel -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="bi bi-info-circle"></i> Help
                        </h6>
                    </div>
                    <div class="card-body">
                        <h6>Nation Name</h6>
                        <p class="small text-muted">
                            Enter the name of the civilization/nation as it appears in Mega Empires. Common examples include:
                        </p>
                        
                        <div class="row">
                            <div class="col-6">
                                <ul class="small text-muted">
                                    <li>Babylon</li>
                                    <li>Egypt</li>
                                    <li>Assyria</li>
                                    <li>Africa</li>
                                    <li>Illyria</li>
                                </ul>
                            </div>
                            <div class="col-6">
                                <ul class="small text-muted">
                                    <li>Thrace</li>
                                    <li>Hatti</li>
                                    <li>Arya</li>
                                    <li>Saba</li>
                                    <li>Scythia</li>
                                </ul>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-lightbulb"></i>
                                <strong>Tip:</strong> Use the exact spelling as it appears in the game to maintain consistency in records and reports.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">
                        <i class="bi bi-trophy"></i> Mega Empires Database Admin Interface
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">
                        Built with Node.js & Express
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>

    <script>
        // Delete confirmation (for edit mode)
        function confirmDelete(nationId, nationName) {
            Swal.fire({
                title: 'Delete Nation?',
                text: 'Are you sure you want to delete "' + nationName + '"? This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then(function(result) {
                if (result.isConfirmed) {
                    // Create and submit form
                    var form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/nations/' + nationId + '/delete';
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
</body>
</html>
