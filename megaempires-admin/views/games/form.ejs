<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Mega Empires Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-trophy"></i> Mega Empires Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-controller"></i> Games
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/games">View All Games</a></li>
                            <li><a class="dropdown-item active" href="/games/new">Add New Game</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-people"></i> Players
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/players">View All Players</a></li>
                            <li><a class="dropdown-item" href="/players/new">Add New Player</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-flag"></i> Nations
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/nations">View All Nations</a></li>
                            <li><a class="dropdown-item" href="/nations/new">Add New Nation</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-table"></i> Records
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/records">View All Records</a></li>
                            <li><a class="dropdown-item" href="/records/new">Add New Record</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col">
                <h1 class="h2"><%= title %></h1>
            </div>
        </div>

        <!-- Breadcrumb -->
        <div class="row mb-3">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/games">Games</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Form -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-controller"></i> Game Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Display validation errors -->
                        <% if (errors && errors.length > 0) { %>
                            <div class="alert alert-danger">
                                <h6><i class="bi bi-exclamation-triangle"></i> Please fix the following errors:</h6>
                                <ul class="mb-0">
                                    <% errors.forEach(function(error) { %>
                                        <li><%= error.msg %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% } %>

                        <form method="POST" action="<%= game.id ? '/games/' + game.id : '/games' %>" novalidate>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">
                                            Game Name <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" 
                                               class="form-control <%= errors && errors.find(e => e.param === 'name') ? 'is-invalid' : '' %>" 
                                               id="name" 
                                               name="name" 
                                               value="<%= game.name || '' %>" 
                                               required>
                                        <div class="form-text">
                                            Enter a descriptive name for the game (e.g., "Game 15 - The West")
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="date" class="form-label">
                                            Game Date <span class="text-danger">*</span>
                                        </label>
                                        <input type="date" 
                                               class="form-control <%= errors && errors.find(e => e.param === 'date') ? 'is-invalid' : '' %>" 
                                               id="date" 
                                               name="date" 
                                               value="<%= game.date ? new Date(game.date).toISOString().split('T')[0] : '' %>" 
                                               required>
                                        <div class="form-text">
                                            Select the date when the game was played
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="final_ast_pos" class="form-label">
                                            Final AST Position
                                        </label>
                                        <input type="number" 
                                               class="form-control <%= errors && errors.find(e => e.param === 'final_ast_pos') ? 'is-invalid' : '' %>" 
                                               id="final_ast_pos" 
                                               name="final_ast_pos" 
                                               value="<%= game.final_ast_pos || '' %>" 
                                               min="0" 
                                               max="16">
                                        <div class="form-text">
                                            Final position on the AST track (0-16, optional)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="game_summary" class="form-label">
                                    Game Summary
                                </label>
                                <textarea class="form-control <%= errors && errors.find(e => e.param === 'game_summary') ? 'is-invalid' : '' %>" 
                                          id="game_summary" 
                                          name="game_summary" 
                                          rows="4" 
                                          placeholder="Optional summary of the game, key events, or notes..."><%= game.game_summary || '' %></textarea>
                                <div class="form-text">
                                    Optional description of the game, notable events, or other details
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> 
                                    <%= game.id ? 'Update Game' : 'Create Game' %>
                                </button>
                                <a href="/games" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <% if (game.id) { %>
                                    <button type="button" class="btn btn-outline-danger ms-auto" 
                                            onclick="confirmDelete(<%= game.id %>, '<%= (game.name || '').replace(/'/g, "\\'") %>')">
                                        <i class="bi bi-trash"></i> Delete Game
                                    </button>
                                <% } %>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Help Panel -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="bi bi-info-circle"></i> Help
                        </h6>
                    </div>
                    <div class="card-body">
                        <h6>Game Name</h6>
                        <p class="small text-muted">
                            Use a descriptive name that helps identify the game. Common formats include:
                            <br>• "Game 15 - The West"
                            <br>• "MegaCon Winter 2025"
                            <br>• "Home Game - March 2025"
                        </p>

                        <h6>Game Date</h6>
                        <p class="small text-muted">
                            Select the actual date the game was played. This is used for sorting and historical records.
                        </p>

                        <h6>Final AST Position</h6>
                        <p class="small text-muted">
                            The final position reached on the AST (Archaeology, Science & Technology) track. This is optional but useful for game analysis.
                        </p>

                        <h6>Game Summary</h6>
                        <p class="small text-muted">
                            Optional field for notes about the game, memorable moments, rule variations used, or other details worth recording.
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">
                        <i class="bi bi-trophy"></i> Mega Empires Database Admin Interface
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">
                        Built with Node.js & Express
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>

    <script>
        // Delete confirmation (for edit mode)
        function confirmDelete(gameId, gameName) {
            Swal.fire({
                title: 'Delete Game?',
                text: 'Are you sure you want to delete "' + gameName + '"? This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then(function(result) {
                if (result.isConfirmed) {
                    // Create and submit form
                    var form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/games/' + gameId + '/delete';
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>
