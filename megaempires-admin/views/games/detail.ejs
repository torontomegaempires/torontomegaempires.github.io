<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Mega Empires Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-trophy"></i> Mega Empires Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-controller"></i> Games
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/games">View All Games</a></li>
                            <li><a class="dropdown-item" href="/games/new">Add New Game</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-people"></i> Players
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/players">View All Players</a></li>
                            <li><a class="dropdown-item" href="/players/new">Add New Player</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-flag"></i> Nations
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/nations">View All Nations</a></li>
                            <li><a class="dropdown-item" href="/nations/new">Add New Nation</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-table"></i> Records
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/records">View All Records</a></li>
                            <li><a class="dropdown-item" href="/records/new">Add New Record</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col">
                <h1 class="h2"><%= title %></h1>
            </div>
        </div>

        <!-- Breadcrumb -->
        <div class="row mb-3">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/games">Games</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><%= game.name %></li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Game Actions -->
        <div class="row mb-3">
            <div class="col">
                <div class="btn-group">
                    <a href="/games/<%= game.id %>/edit" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Game
                    </a>
                    <a href="/records/new?game_id=<%= game.id %>" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add Player Record
                    </a>
                    <button type="button" class="btn btn-outline-danger" 
                            onclick="confirmDelete(<%= game.id %>, 'Game')">
                        <i class="bi bi-trash"></i> Delete Game
                    </button>
                </div>
            </div>
        </div>

        <!-- Game Information -->
        <div class="row mb-4">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle"></i> Game Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Game Name</h6>
                                <p class="text-muted"><%= game.name %></p>
                            </div>
                            <div class="col-md-6">
                                <h6>Date Played</h6>
                                <p class="text-muted">
                                    <% if (game.date) { %>
                                        <span class="badge bg-light text-dark">
                                            <%= new Date(game.date).toLocaleDateString() %>
                                        </span>
                                    <% } else { %>
                                        <span class="text-muted">No date recorded</span>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Final AST Position</h6>
                                <p class="text-muted">
                                    <% if (game.final_ast_pos) { %>
                                        <span class="badge bg-primary fs-6"><%= game.final_ast_pos %></span>
                                    <% } else { %>
                                        <span class="text-muted">Not recorded</span>
                                    <% } %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6>Total Players</h6>
                                <p class="text-muted">
                                    <span class="badge bg-info fs-6"><%= game.records ? game.records.length : 0 %></span>
                                </p>
                            </div>
                        </div>
                        <% if (game.game_summary) { %>
                            <div class="row">
                                <div class="col-12">
                                    <h6>Game Summary</h6>
                                    <p class="text-muted"><%= game.game_summary %></p>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Game Statistics -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="bi bi-graph-up"></i> Game Statistics
                        </h6>
                    </div>
                    <div class="card-body">
                        <% if (game.records && game.records.length > 0) { %>
                            <% 
                                var scores = game.records.map(r => r.score).filter(s => s != null);
                                var avgScore = scores.length > 0 ? Math.round(scores.reduce((a, b) => a + b, 0) / scores.length) : 0;
                                var highScore = scores.length > 0 ? Math.max(...scores) : 0;
                                var lowScore = scores.length > 0 ? Math.min(...scores) : 0;
                            %>
                            <div class="mb-3">
                                <small class="text-muted">Average Score</small>
                                <div class="fs-4 text-primary"><%= avgScore %></div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Highest Score</small>
                                <div class="fs-4 text-success"><%= highScore %></div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Lowest Score</small>
                                <div class="fs-4 text-warning"><%= lowScore %></div>
                            </div>
                        <% } else { %>
                            <p class="text-muted text-center">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No player records yet
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Player Records -->
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-people"></i> Player Records
                        </h5>
                        <a href="/records/new?game_id=<%= game.id %>" class="btn btn-sm btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Record
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (game.records && game.records.length > 0) { %>
                            <div class="table-responsive">
                                <table id="recordsTable" class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Rank</th>
                                            <th>Player</th>
                                            <th>Nation</th>
                                            <th>Score</th>
                                            <th>AST Position</th>
                                            <th>Advances</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% game.records.forEach(function(record, index) { %>
                                            <tr>
                                                <td>
                                                    <% if (index === 0) { %>
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-trophy"></i> 1st
                                                        </span>
                                                    <% } else if (index === 1) { %>
                                                        <span class="badge bg-secondary">
                                                            <i class="bi bi-award"></i> 2nd
                                                        </span>
                                                    <% } else if (index === 2) { %>
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-award"></i> 3rd
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-light text-dark"><%= index + 1 %></span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <strong><%= record.player_display || record.player_name %></strong>
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary"><%= record.nation_name %></span>
                                                </td>
                                                <td>
                                                    <% if (record.score != null) { %>
                                                        <strong><%= record.score %></strong>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (record.ast_pos != null) { %>
                                                        <span class="badge bg-info"><%= record.ast_pos %></span>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% 
                                                        var totalAdvances = (record.advances_1vp || 0) + (record.advances_3vp || 0) + (record.advances_6vp || 0);
                                                    %>
                                                    <% if (totalAdvances > 0) { %>
                                                        <span class="badge bg-success"><%= totalAdvances %></span>
                                                        <small class="text-muted">
                                                            (<%= record.advances_1vp || 0 %>/<%= record.advances_3vp || 0 %>/<%= record.advances_6vp || 0 %>)
                                                        </small>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/records/<%= record.game_id %>/<%= record.player_id %>/<%= record.nation_id %>/edit" class="btn btn-outline-secondary" title="Edit Record">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-outline-danger" title="Delete Record" 
                                                                onclick="confirmDeleteRecord(<%= record.game_id %>, <%= record.player_id %>, <%= record.nation_id %>, '<%= record.player_display || record.player_name %>')">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-people fs-1 text-muted"></i>
                                <h4 class="text-muted mt-3">No Player Records</h4>
                                <p class="text-muted">Add player records to track game results and statistics.</p>
                                <a href="/records/new?game_id=<%= game.id %>" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Add First Record
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">
                        <i class="bi bi-trophy"></i> Mega Empires Database Admin Interface
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">
                        Built with Node.js & Express
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Custom JS -->
    <script src="/js/app.js"></script>

    <script>
        // Initialize DataTable
        $(document).ready(function() {
            $('#recordsTable').DataTable({
                responsive: true,
                pageLength: 25,
                order: [[3, 'desc']], // Sort by score descending
                columnDefs: [
                    { orderable: false, targets: [6] } // Disable sorting on Actions column
                ]
            });
        });

        // Delete game confirmation
        function confirmDelete(gameId, gameName) {
            Swal.fire({
                title: 'Delete Game?',
                text: 'Are you sure you want to delete "' + gameName + '"? This will also delete all player records for this game. This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then(function(result) {
                if (result.isConfirmed) {
                    // Create and submit form
                    var form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/games/' + gameId + '/delete';
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }

        // Delete record confirmation
        function confirmDeleteRecord(gameId, playerId, nationId, playerName) {
            Swal.fire({
                title: 'Delete Record?',
                text: 'Are you sure you want to delete the record for "' + playerName + '"? This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then(function(result) {
                if (result.isConfirmed) {
                    // Create and submit form
                    var form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/records/' + gameId + '/' + playerId + '/' + nationId + '/delete';
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
</body>
</html>
